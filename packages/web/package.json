{
  "name": "@magic-beans/web",
  "version": "1.0.0",
  "type": "module",
  "description": "Browser-specific utilities and preview for Magic Beans",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "prepare": "npm run build"
  },
  "peerDependenciesMeta": {
    "canvas": {
      "optional": true
    }
  },
  "dependencies": {
    "@magic-beans/core": "workspace:*"
  }
}