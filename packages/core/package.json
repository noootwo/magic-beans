{
  "name": "@magic-beans/core",
  "version": "1.0.0",
  "type": "module",
  "description": "Core logic for Magic Beans: conversion, palettes, utils",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js",
      "require": "./dist/node.cjs"
    },
    "./data": {
      "types": "./dist/data.d.ts",
      "import": "./dist/data.js",
      "require": "./dist/data.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "prepare": "npm run build"
  },
  "keywords": [
    "pixel-art",
    "perler-beads",
    "image-processing",
    "color-matching"
  ],
  "author": "Your Name",
  "license": "MIT",
  "peerDependencies": {
    "sharp": "^0.34.4"
  },
  "peerDependenciesMeta": {
    "sharp": {
      "optional": true
    }
  }
}